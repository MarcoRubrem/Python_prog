import mysql.connector
import tkinter as tk
from tkinter import *
from tkinter import ttk


def print_calendar():
    for row in records:
        text_output = tk.Label(window, text=row, fg="red", font="Helvetica")
        text_output.grid(row=0, column=1, sticky="W")


def print_repetitions():
    for row in records:
        text_output = tk.Label(window, text="aaaaaaa", fg="blue", font="Helvetica")
        text_output.grid(row=1, column=1, padx=100, sticky="W")


window = tk.Tk()
window.geometry("600x600")
window.title = "Prenotazioni unito"
button_Calendar = tk.Button(text="Calendario ripetizioni", command=print_calendar)
button_Calendar.grid(row=0, column=0, sticky="W")
button_Rep = tk.Button(text="Lista insegnamenti", command=print_repetitions)
button_Rep.grid(row=1, column=0, pady=20, sticky="W")
window.resizable(False, False)

conn = mysql.connector.connect(host="localhost", port="3306", user="root", password="", database="miodb")
cursor = conn.cursor()
selectquery = "select * from utente"
cursor.execute(selectquery)
records = cursor.fetchall()

if __name__ == "__main__":

    window.mainloop()

    print("Numero utenti: ", cursor.rowcount)
    for row in records:
        print("Account: ", row[0])
        print("Password: ", row[1])
        print("Ruolo", row[2])

    cursor.close()
    conn.close()
